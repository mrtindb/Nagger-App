<!doctype html>
<html lang="en" data-bs-theme="auto">
<%- include('partials/head'); %>
<head>
  <link rel="stylesheet" href="form-styles.css">
</head>
<body data-bs-theme="light">
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
    integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
    crossorigin="anonymous"></script>

  <!-- top header-->
  <header class="navbar sticky-top bg-dark flex-md-nowrap p-0 shadow py-md-2" data-bs-theme="dark">
    <a style="text-decoration: none;" class="navbar-brand col-4 col-md-3 col-lg-2 my-1 px-3 py-2 text-white h-1"
      href="/home">Nagger</a>
      <div class="col-6 col-md-7 col-lg-8 my-1 px-3 py-2 text-white text-end">
        <a href="/login" style="text-decoration: none;" class="mx-1 text-white">Log in</a>
        <a href="/register" style="text-decoration: none;" class="mx-1 text-white">Register</a>
      </div>
     </ul>

  </header>
  <!-- Main Container -->
  <div class="container-fluid" style="min-height: 30em;">

    <div class="row">

      <!-- Navbar/Navdrawer -->
        
      <!-- Main Content -->
      <main class="col">
        <div class="container mx-auto mt-4" id="register-form-container">
          <form method="POST" action="/register">
            <h1 class="h3 mb-3 fw-normal">Register</h1>
            
            <div class="mb-3 form-floating">
              <input type="text" class="form-control" required name="username" id="username" required minlength="3" placeholder="Username">
              <label for="usernameTextField" class="form-label">Username</label>
            </div>
            
            <div class="mb-3 form-floating">
              <input type="email" class="form-control" required name="email" id="email" aria-describedby="emailHelp"
                placeholder="Enter email">
              <label for="emailTextField" class="form-label">Email Address</label>
            </div>

            <div class="mb-3 form-floating">
              <input type="password" class="form-control" name="password" id="password" required minlength="8" placeholder="Password">
              <label for="passwordTextField" class="form-label">Password</label>
            </div>

            <% if(errorFlag) { %>
            <div class="mb-3">
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= errorMessage %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            </div>
            <% } %>

            <button type="submit" class="btn btn-success">Create Account</button>
          </form>
        </div>
      </main>
    </div>
  </div>

  <!-- Footer -->
    <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.3.2/dist/chart.umd.js"
    integrity="sha384-eI7PSr3L1XLISH8JdDII5YN/njoSsxfbrkCTnJrzXt+ENP5MOVBxD+l6sEG4zoLp"
    crossorigin="anonymous"></script>
  <script src="dashboard.js"></script>
</body>

</html>